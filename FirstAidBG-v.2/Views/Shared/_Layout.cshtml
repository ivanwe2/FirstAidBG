<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FirstAidBG</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FirstAidBG.styles.css" asp-append-version="true" />
    <!-- font awesome cdn link  -->
   <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">


</head>
<body>
    <header>
        <div class="header-logo container-fluid">
            <a id="header-a-logo" asp-area="" asp-controller="Home" asp-action="Index"> FirstAidBG<img src="~/PNGs/cross.png" class="img-navbar"> </a>
            
           <div class="header-login"><partial name="_LoginPartial" /></div>
            
        </div>
        
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow" id="stickyNavbar">
            <div class="container-fluid">
               
               
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <img src="~/PNGs/menu.png" class="img-navbar" >
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    <ul class="navbar-nav flex-grow-0">
                        <li class="nav-item onhover">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">Начало</a>
                        </li>
                        
                        <li class="nav-item onhover">
                            <a class="nav-link " asp-area="" asp-controller="Info" asp-action="InfoPageBrokenBones">Информация</a>
                        </li>
                        <li class="nav-item onhover">
                            <a class="nav-link " asp-area="" asp-controller="Forum" asp-action="Index">Форум</a>
                        </li> 
                        
                    </ul>                                      
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted bg-black position-absolute w-100 bottom-0">
        <div class="">
            &copy; 2022 - FirstAidBG - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
            
          <script>// make navbar sticky
            window.onscroll = function() {myFunction()};

            // Get the navbar
            var header = document.getElementById("stickyNavbar");

            // Get the offset position of the navbar
            var sticky = header.offsetTop;

            // Add the sticky class to the header when you reach its scroll position. Remove "sticky" when you leave the scroll position
            function myFunction() {
              if (window.pageYOffset > sticky) {
                header.classList.add("sticky");
              } else {
                header.classList.remove("sticky");
              }
            }
            </script>
               

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>